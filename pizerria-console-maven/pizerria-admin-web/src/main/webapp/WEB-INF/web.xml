<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<filter>
		<filter-name>MonFilter</filter-name>
		<filter-class>fr.pizzeria.admin.web.MyFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>MonFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<listener>
		<listener-class>fr.pizzeria.admin.web.MyListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>MyServlet</servlet-name>
		<servlet-class>fr.pizzeria.admin.web.ListerPizzaController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MyServlet1</servlet-name>
		<servlet-class>fr.pizzeria.admin.web.EditerPizzaController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MyServlet2</servlet-name>
		<servlet-class>fr.pizzeria.admin.web.NouvellePizzaController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MyServlet3</servlet-name>
		<servlet-class>fr.pizzeria.admin.web.DeletePizzaController</servlet-class>
	</servlet>
	<servlet>
	<servlet-name>MyLogin</servlet-name>
	<servlet-class>fr.pizzeria.admin.web.AuthentificationController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>MyServlet</servlet-name>
		<url-pattern>/pizzas/list</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MyServlet1</servlet-name>
		<url-pattern>/pizzas/edit</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MyServlet2</servlet-name>
		<url-pattern>/pizzas/new</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MyServlet3</servlet-name>
		<url-pattern>/pizzas/delete</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	<servlet-name>MyLogin</servlet-name>
	<url-pattern>/login</url-pattern>
	</servlet-mapping>




</web-app>
